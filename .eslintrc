{
  "root": true,
  "extends": [
    "@xylabs"
  ],
  "ignorePatterns": [
    "**/dist",
    "**/node_modules",
    "coverage",
    "swagger.json"
  ],
  "rules": {
    "import/no-internal-modules": [
      "warn", {
        "allow": [
          "source-map-support/*",
          "lodash/*",
          "aws-sdk/**/*",
          "types/*"
        ]
      }
    ]
  }
}
